{
  "name": "folder-for-ai",
  "version": "1.3.0",
  "description": "Select or drag-and-drop a folder, view/filter structure, choose files (with cancellation), get content for AI chat.",
  "main": "main.js",
  "productName": "Folder for AI",
  "scripts": {
      "start": "electron .",
      "test": "echo \"Error: no test specified\" && exit 1",
      "dist": "electron-builder --win"
  },
  "keywords": [
      "electron",
      "filesystem",
      "utility",
      "ai",
      "context",
      "code",
      "structure",
      "drag-drop",
      "llm",
      "prompt"
  ],
  "author": "Guliaev",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
      "electron": "^31.0.1",
      "electron-builder": "^24.13.3"
    },
  "build": {
    "appId": "com.electron.folderforai",
    "productName": "Folder for AI",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "style.css",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}