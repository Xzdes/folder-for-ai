{
  "name": "folder-for-ai",
  "version": "1.5.1",
  "description": "Select or drag-and-drop a folder, view/filter structure, choose files, and drag them to other applications.",
  "main": "main.js",
  "productName": "Folder for AI",
  "scripts": {
      "start": "electron .",
      "test": "echo \"Error: no test specified\" && exit 1",
      "dist:win": "electron-builder --win --x64",
      "dist:linux": "electron-builder --linux --x64",
      "dist:mac": "electron-builder --mac --x64 --arm64",
      "dist": "electron-builder --win --linux --mac --x64 --arm64"
  },
  "keywords": [
      "electron",
      "filesystem",
      "utility",
      "ai",
      "context",
      "code",
      "structure",
      "drag-drop",
      "llm",
      "prompt",
      "folder",
      "files"
  ],
  "author": "Guliaev",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
      "electron": "^31.0.1",
      "electron-builder": "^24.13.3"
    },
  "build": {
    "appId": "com.electron.folderforai",
    "productName": "Folder for AI",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "style.css",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
       "target": [
         {
            "target": "AppImage",
            "arch": ["x64"]
         },
         {
             "target": "deb",
             "arch": ["x64"]
         }
       ],
       "category": "Utility"

    },
    "mac": {
      "target": [
        {
            "target": "dmg",
            "arch": ["x64", "arm64"]
        },
        {
            "target": "zip",
             "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities"

    }
  }
}